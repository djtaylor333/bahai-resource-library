<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for document access and network (for online resources) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />

    <!-- Storage permissions for Android 13+ -->
    <uses-permission android:name="android.permission.READ_MEDIA_DOCUMENTS" />

    <!-- MultiDex support -->
    <uses-library
        android:name="org.apache.http.legacy"
        android:required="false" />

    <application
        android:name=".BahaiResourceApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.BahaiResourceLibrary"
        android:requestLegacyExternalStorage="true"
        tools:targetApi="31">

        <!-- Splash Screen Activity -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.BahaiResourceLibrary.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.BahaiResourceLibrary"
            android:screenOrientation="portrait" />

        <!-- PDF Reader Activity -->
        <activity
            android:name=".ui.reader.PdfReaderActivity"
            android:exported="false"
            android:theme="@style/Theme.BahaiResourceLibrary.Reader"
            android:parentActivityName=".MainActivity" />

        <!-- Document Reader Activity -->
        <activity
            android:name=".ui.reader.DocumentReaderActivity"
            android:exported="false"
            android:theme="@style/Theme.BahaiResourceLibrary.Reader"
            android:parentActivityName=".MainActivity" />

        <!-- File provider for sharing documents -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>