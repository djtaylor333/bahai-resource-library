<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.reader.PdfReaderActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/bahai_primary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- PDF Viewer -->
        <com.github.barteksc.pdfviewer.PDFView
            android:id="@+id/pdfView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/bottomControls"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Progress Indicator -->
        <ProgressBar
            android:id="@+id/progressIndicator"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:max="100"
            android:progress="0"
            android:progressTint="@color/bahai_primary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Bottom Controls -->
        <LinearLayout
            android:id="@+id/bottomControls"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/bahai_surface"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- Page Indicator -->
            <TextView
                android:id="@+id/pageIndicator"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Page 1 of 1"
                android:textColor="@color/bahai_on_surface"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bookmark Menu (Slide from Left) -->
    <LinearLayout
        android:id="@+id/bookmarkMenu"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/bahai_surface"
        android:elevation="8dp"
        android:orientation="vertical"
        android:translationX="-300dp">

        <!-- Bookmark Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bahai_primary"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_bookmark"
                android:tint="@color/bahai_on_primary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bookmarks"
                android:textColor="@color/bahai_on_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookmark_count_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_badge"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/bahai_primary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Bookmark List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bookmarkRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Annotation Menu (Slide from Right) -->
    <LinearLayout
        android:id="@+id/annotationMenu"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/bahai_surface"
        android:elevation="8dp"
        android:orientation="vertical"
        android:translationX="320dp">

        <!-- Annotation Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bahai_secondary"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/ic_note"
                android:tint="@color/bahai_on_secondary" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notes &amp; Highlights"
                android:textColor="@color/bahai_on_secondary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/annotation_count_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/circular_badge"
                android:minWidth="24dp"
                android:minHeight="24dp"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/bahai_secondary"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Annotation List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/annotationRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Overlay for closing menus -->
    <View
        android:id="@+id/bookmarkOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <View
        android:id="@+id/annotationOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- Floating Action Buttons -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bookmarkMenuToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_margin="16dp"
        android:src="@drawable/ic_bookmark"
        app:backgroundTint="@color/bahai_primary"
        app:elevation="6dp"
        app:fabSize="mini"
        app:tint="@color/bahai_on_primary" />

    <!-- Bookmark Count Badge -->
    <TextView
        android:id="@+id/bookmarkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/circular_badge"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/bahai_primary"
        android:textSize="10sp"
        android:visibility="gone" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/annotationMenuToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_margin="16dp"
        android:src="@drawable/ic_note"
        app:backgroundTint="@color/bahai_secondary"
        app:elevation="6dp"
        app:fabSize="mini"
        app:tint="@color/bahai_on_secondary" />

    <!-- Annotation Count Badge -->
    <TextView
        android:id="@+id/annotationCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/circular_badge"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/bahai_secondary"
        android:textSize="10sp"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>